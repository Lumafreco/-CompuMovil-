<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricardo.taller2.Camara"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="@string/Capture"
        app:layout_constraintRight_toLeftOf="@+id/btnUploadImage"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="627dp"
        android:layout_marginRight="279dp" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginEnd="50dp"
        android:text="@string/UploadImage"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCapture"
        tools:layout_constraintBaseline_creator="1" />

    <ImageView
        android:id="@+id/imageCamara"
        android:layout_width="211dp"
        android:layout_height="209dp"
        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="62dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
