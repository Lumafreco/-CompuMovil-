<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricardo.taller2.Camara"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageCamara"
        android:layout_width="211dp"
        android:layout_height="209dp"
        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnUploadImage"
        android:layout_marginTop="110dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnUploadImage"
        app:layout_constraintHorizontal_bias="0.497" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:text="@string/Capture"
        android:layout_marginEnd="49dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnUploadImage"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="399dp" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginEnd="13dp"
        android:text="@string/UploadImage"
        app:layout_constraintRight_toLeftOf="@+id/btnCapture"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="-140dp"
        app:layout_constraintTop_toBottomOf="@+id/imageCamara"
        android:layout_marginRight="363dp" />




</android.support.constraint.ConstraintLayout>
